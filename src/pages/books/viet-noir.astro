---
import ImagePro from '~/components/ImagePro.astro';
import BookLayout from '~/layouts/BookLayout.astro';

const imagesModules = import.meta.glob('../../images/books/viet-noir/*.jpg');

const imagesList = Object.entries(imagesModules).map(([, entries]) => {
  return entries;
});
---

<BookLayout title="Viet Noir" description="A black and white photography project made in Vietnam.">
  <h1>VIET NOIR</h1>
  <div class="imagesSet">
    {imagesList.map((imgImport) => <ImagePro src={imgImport()} />)}
  </div>
</BookLayout>

<style lang="scss">
  h1 {
    font-weight: 700;
    font-size: clamp(1.3rem, 3vmax, 3rem);
    text-align: center;
  }

  .imagesSet {
    width: 100%;
    margin-left: auto;
    margin-right: auto;
    @media (min-width: 1100px) {
      max-width: 930px;
    }

    :global(.ImagePro) {
      margin-bottom: 40px;
    }
  }
</style>
