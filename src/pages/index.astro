---
import { Sprite } from 'astro-icon';
import IconAnchor from '~/components/IconAnchor.astro';
import ImagePro from '~/components/ImagePro.astro';
import Layout from '~/layouts/Layout.astro';

const imagesModules = import.meta.glob('../images/*.jpg');

const imagesList = Object.entries(imagesModules)
  .filter(([key]) => !key.includes('/0.jpg'))
  .map(([, entries]) => {
    return entries;
  });

const socialLinks = [
  {
    name: 'instagram',
    title: 'sidthecool007',
    href: 'https://unsplash.com/@siddacool',
  },
  {
    name: 'unsplash',
    title: '@siddacool',
    href: 'https://unsplash.com/@siddacool',
  },
  {
    name: 'mail',
    title: 'sidmangelainc@gmail.com',
    href: 'mailto:sidmangelainc@gmail.com?subject=Foto:',
  },
];
---

<Layout title="Siddhesh Mangela - Portfolio">
  <Sprite.Provider>
    <main>
      <div class="bgCover">
        <ImagePro src={import('~/images/0.jpg')} />
      </div>
      <div class="hero">
        <div class="name">Siddhesh Mangela</div>
        <div class="social-links">
          {
            socialLinks.map(({ name, title, href }) => (
              <IconAnchor name={name} title={title} href={href} showTitle={false} />
            ))
          }
        </div>
      </div>

      <div class="imagesSet">
        {imagesList.map((imgImport) => <ImagePro src={imgImport()} />)}
      </div>
      <div class="social-links-extended">
        {
          socialLinks.map(({ name, title, href }) => (
            <IconAnchor name={name} title={title} href={href} showTitle />
          ))
        }
      </div>
    </main>
  </Sprite.Provider>
</Layout>

<style lang="scss">
  main {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
  }

  .hero {
    padding: 48px 0;

    @media (min-width: 1100px) {
      max-width: 1050px;
      position: absolute;
      display: flex;
      flex-direction: column;
      padding: 0;
      top: 114px;
      color: var(--color-text-hero);
      margin-left: 408px;
    }

    .name {
      font-size: clamp(1.3rem, 2.4vw, 2rem);
      padding-bottom: 32px;

      @media (min-width: 1100px) {
        font-size: 3rem;
        display: flex;
        justify-content: center;
      }
    }

    .social-links {
      display: flex;
      justify-content: center;

      :global(a) {
        margin-right: 48px;

        &:last-child {
          margin-right: 0;
        }
      }
    }
  }

  .social-links-extended {
    width: 100%;
    display: flex;
    flex-direction: column;

    @media (min-width: 1100px) {
      flex-direction: row;
      justify-content: center;
    }

    :global(a) {
      margin-bottom: 48px;

      @media (min-width: 1100px) {
        margin-left: 48px;
      }

      &:last-child {
        @media (min-width: 1100px) {
          margin-right: 0;
        }
      }
    }

    :global(svg) {
      width: 16px;
      height: 16px;
    }
  }

  .bgCover {
    width: 100%;
    padding-top: 32px;
    @media (min-width: 1100px) {
      max-width: 1050px;
      margin-bottom: 64px;
    }

    :global(img) {
      @media (min-width: 1100px) {
        max-height: 70vh;
        object-fit: cover;
        object-position: center;
      }
    }
  }

  .imagesSet {
    width: 100%;
    @media (min-width: 1100px) {
      max-width: 930px;
    }

    :global(.ImagePro) {
      margin-bottom: 40px;
    }
  }
</style>
