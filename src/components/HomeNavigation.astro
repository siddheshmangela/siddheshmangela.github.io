---
import { navigation } from '~/data/navigation';
---

<nav>
  <ul>
    {
      navigation.map((data) => (
        <li>
          <a href={`${data.href ? data.href : `/${data.name}`}`}>{data.label}</a>
        </li>
      ))
    }
  </ul>
</nav>

<style lang="scss">
  nav {
    display: block;
    width: 100%;

    @media (min-width: 1100px) {
      max-width: 1050px;
    }

    @media print {
      display: none;
    }
  }

  ul {
    display: flex;
    margin: 0;
    padding: 0;
    margin-top: 20px;
    margin-bottom: 40px;
    flex-wrap: wrap;
    justify-content: center;

    @media (min-width: 640px) {
      margin-top: 0;
    }
  }

  li {
    display: flex;
    margin: 0;
    padding: 0;
    flex-wrap: wrap;
    margin-right: 20px;

    &:last-child {
      margin-right: 0;
    }
  }

  a {
    font-size: 1.1rem;
    color: inherit;
    text-decoration: underline;
    letter-spacing: 1.2px;
    display: inline-flex;
    text-underline-offset: 6px;
    text-decoration-thickness: 1px;

    @media (min-width: 640px) {
      font-size: 1.3rem;
    }
  }
</style>
