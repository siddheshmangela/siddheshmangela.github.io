---
import { navigation } from '~/data/navigation';
import NavLogo from './NavLogo.astro';
---

<nav>
  <ul>
    <NavLogo />
    {
      navigation.map((data) => (
        <li>
          <a
            href={`/${data.name}`}
            class={`${Astro.url.pathname === `/${data.name}` ? 'active' : ''}`}
          >
            {data.label}
          </a>
        </li>
      ))
    }
  </ul>
</nav>

<style lang="scss">
  nav {
    font-size: 1.1rem;
    letter-spacing: 0.4px;
    display: block;
    width: 100%;
    position: sticky;
    background-color: inherit;
    top: 0;
    padding-left: 16px;
    padding-right: 16px;
    height: 60px;
    z-index: 100;
    border-bottom: 1px solid var(--color-border-1);

    @media (min-width: 640px) {
      height: 72px;
      padding-left: 32px;
      padding-right: 32px;
    }

    @media print {
      display: none;
    }
  }

  ul {
    display: flex;
    margin: 0;
    padding: 0;
    flex-wrap: wrap;
    height: 100%;
  }

  li {
    display: flex;
    margin: 0;
    padding: 0;
    flex-wrap: wrap;
    height: 100%;
    align-items: center;
    margin-right: 20px;
  }

  a {
    font-size: inherit;
    color: inherit;
    text-decoration: none;
    letter-spacing: inherit;
    display: inline-flex;
    height: 70%;
    align-items: center;

    &.active {
      font-weight: 700;
    }
  }
</style>
