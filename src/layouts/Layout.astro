---
export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="favicon.svg" />
    <link rel="icon" type="image/png" sizes="160x160" href="/favicon-32x32.png" />
    <title>{title}</title>
    <meta name="description" content="a Photography portfolio" />
    <meta property="og:title" content="Photos by Siddhesh Mangela" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://siddheshmangela.github.io/" />
    <meta property="og:image" content="https://siddheshmangela.github.io/og.jpg" />
    <meta property="og:description" content="a Photography portfolio" />
    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="https://siddheshmangela.github.io/" />
    <meta property="twitter:url" content="https://siddheshmangela.github.io/" />
    <meta name="twitter:title" content="Photos by Siddhesh Mangela" />
    <meta name="twitter:description" content="a Photography portfolio" />
    <meta name="twitter:image" content="https://siddheshmangela.github.io/og.jpg" />
    <meta name="theme-color" content="#222224" />
    <<link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Merriweather&display=swap" rel="stylesheet">
    <style>
      :root {
        color-scheme: dark;
        --color-text: #afafaf;
        --color-bg: #222224;
        --color-text-hero: #79392b;
      }

      :global(*) {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        padding: 16px;
        font-family: 'Merriweather', serif;
        background-color: var(--color-bg);
        color: var(--color-text);
        min-height: 100vh;
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
