---
import BaseLayout from './BaseLayout.astro';

export interface Props {
  title?: string;
  description?: string;
  ogTitle?: string;
  ogDescription?: string;
  ogImage?: string;
}

let {
  title = 'Photos by Siddhesh Mangela',
  description = 'a Photography portfolio',
  ogTitle = '',
  ogDescription = '',
  ogImage = 'https://siddheshmangela.github.io/og.jpg',
} = Astro.props as Props;
---

<BaseLayout
  title={title}
  description={description}
  ogTitle={ogTitle}
  ogDescription={ogDescription}
  ogImage={ogImage}
>
  <slot />
</BaseLayout>

<style is:global>
  :root {
    color-scheme: dark;
    --color-text: #afafaf;
    --color-bg: #222224;
    --color-text-hero: #ffc69f;
  }

  body {
    margin: 0;
    padding: 16px;
    font-family: 'Merriweather', serif;
    background-color: var(--color-bg);
    color: var(--color-text);
    min-height: 100vh;
  }
</style>
