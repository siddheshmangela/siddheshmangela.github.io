---
import { Sprite } from 'astro-icon';
import BaseLayout from './BaseLayout.astro';
---

<BaseLayout>
  <Sprite.Provider>
    <slot />
  </Sprite.Provider>
</BaseLayout>

<style is:global>
  :root {
    color-scheme: dark;
    --color-text: #afafaf;
    --color-bg: #222224;
    --color-text-hero: #ffc69f;
  }

  body {
    margin: 0;
    padding: 16px;
    font-family: 'Merriweather', serif;
    background-color: var(--color-bg);
    color: var(--color-text);
    min-height: 100vh;
  }
</style>
